{{>header}}
{{> navbar}}

<section class="container-fluid w-100 d-flex justify-content-center align-items-center" style="padding-top: 185px; padding-bottom: 262px">
    <article class="d-flex justify-content-center d-flex flex-column">
        <form class="card" action="/GauchoRocket/pagoReserva/pagar" method="post">
            <div class="card-header">
                <h5><i class="far fa-credit-card ms-2"></i> Realice su pago con tarjeta</h5>
            </div>
            <div class="card-body">
                <select class="form-select mb-3" aria-label="Default select example" name="empresaTarjeta">
                    <option selected disabled>-- SELECCIONE --</option>
                    {{#empresaTarjetas}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/empresaTarjetas}}
                </select>
                <input class="form-control mb-2" type="text" name="nroTarjeta" placeholder="Numero">
                <input class="form-control mb-2" type="text" name="nombreTitular" placeholder="Nombre Titular">
                <div class="d-flex flex-row">
                    <select class="form-select" aria-label="Default select example" name="mesVencimiento" style="margin: 6px 0px 6px 0px;">
                        <option selected disabled>Mes</option>
                        <option value="01">Enero</option>
                        <option value="02">Febrero</option>
                        <option value="03">Marzo</option>
                        <option value="04">Abril</option>
                        <option value="05">Mayo</option>
                        <option value="06">Junio</option>
                        <option value="07">Julio</option>
                        <option value="08">Agosto</option>
                        <option value="09">Septiembre</option>
                        <option value="10">Octubre</option>
                        <option value="11">Noviembre</option>
                        <option value="12">Diciembre</option>
                    </select>

                    <select class="form-select" aria-label="Default select example" name="anioVencimiento" style="margin: 6px 0px 6px 10px;">
                        <option selected disabled>AÃ±o</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                        <option value="2025">2025</option>
                        <option value="2026">2026</option>
                        <option value="2027">2027</option>
                        <option value="2028">2028</option>
                        <option value="2029">2029</option>
                        <option value="2030">2030</option>
                        <option value="2031">2031</option>
                        <option value="2032">2032</option>
                        <option value="2025">2033</option>
                        <option value="2034">2034</option>
                        <option value="2035">2035</option>
                        <option value="2036">2036</option>
                    </select>
                    <input class="form-control ms-2" type="text" name="codSeguridad" placeholder="Cod seguridad" style="width:10rem">
                </div>
            </div>

            <div class="row d-flex justify-content-evenly pb-3 pt-5">
                <div class="col-sm-4" >
                    <a class="btn btn-danger w-100 " role="button" href="/GauchoRocket/home" style=" background-color: #bb2d3b">Cancelar</a>
                </div>
                <div class="col-sm-6" >
                    <button type="submit" class="btn btn-primary w-100 ">Pagar</button>
                </div>
            </div>
        </form>

        {{#mensajeDePago}}
            <div class="alert alert-success text-center container mt-4" role="alert">
                <h4 class="d-flex justify-content-center">
                    <i class="far fa-thumbs-up me-3"></i>
                    <p class=" w3-center mt-2">{{mensajeDePago}}</p>
                </h4>
            </div>
        {{/mensajeDePago}}
    </article>
</section>

{{>footer}}